        ;;
        7 )
            setLinuxDateZone
        ;;
        8 )
            upgradeScript
        ;;
        9 )
            centos6_yuminstall
        ;;
        0 )
            exit 1
        ;;
        * )
            clear
            red "请输入正确数字 !"
            sleep 2s
            start_menu
        ;;
    esac
}


clear
     check_root
    getLinuxOSRelease
    installSoftDownload
    installPackage
[[ ${osRelease} != "debian" ]] && [[ ${osRelease} != "ubuntu" ]] && [[ ${osRelease} != "centos" ]] && echo -e "${Error} 本脚本不支持当前系统 ${osRelease} !" && exit 1

echo -e "\033[34m================================================================\033[0m
         \033[31m     欢迎使用矿池代理一键脚本                                     \033[0m

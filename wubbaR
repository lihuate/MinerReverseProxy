    green " 6. 停止"
    echo
    green " 7. 设置时区为北京时间"
    green " 8. 升级脚本"
    green " 9. centos6.x换源"
    green " 0. 退出脚本"
    menu_status
    echo
    read -p "请输入数字:" menuNumberInput
    case "$menuNumberInput" in
        1 )
            install_wubba
